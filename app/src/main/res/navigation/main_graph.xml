<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.smartphone_shop.presentation.fragments.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_fragment_to_detail_fragment"
            app:destination="@+id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.smartphone_shop.presentation.fragments.ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail">

        <action
            android:id="@+id/action_detail_fragment_to_main_fragment"
            app:destination="@+id/mainFragment" />

    </fragment>

</navigation>